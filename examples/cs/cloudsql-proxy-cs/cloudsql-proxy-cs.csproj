<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>cloudsql_proxy_cs</RootNamespace>
    <PackageProjectUrl>https://github.com/expert1-pty-ltd/cloudsql-proxy</PackageProjectUrl>
    <RepositoryUrl></RepositoryUrl>
    <Authors>Expert1 Pty Ltd</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>cloudsql-proxy-cs</PackageId>
    <Description>A wrapper for Google Cloud SQL Proxy.</Description>
    <PackageLicenseExpression></PackageLicenseExpression>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <PropertyGroup>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\cloudsql-proxy-cs.targets" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="$(MSBuildProjectDirectory)\runtimes\cloud_sql_proxy.dll">
      <Pack>True</Pack>
      <PackagePath>runtimes\win-x64\native</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </None>
    <None Include="..\..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
  
  <Target Name="BuildCloudSQLProxyDLL" BeforeTargets="DispatchToInnerBuilds">
    <Message Importance="High" Text="Building GO Cloud SQL Proxy Dll $(MSBuildProjectDirectory)\runtimes\cloud_sql_proxy.dll" />
    <Exec Command="go build -buildmode=c-shared -o $(MSBuildProjectDirectory)\runtimes\cloud_sql_proxy.dll" WorkingDirectory="$(ProjectDir)..\..\..\lib\cloud_sql_proxy\" />
  </Target>
</Project>
